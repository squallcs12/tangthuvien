{% extends 'book/base.html' %}
{% load i18n %}

{% block title %}{% trans 'Copy book'%}{% endblock %}

{% block content %}
<div id="publish_new_book">
    <div class="row">
        <div class="col-lg-9">
            <div class="well">
                <form method="post" action="{% url 'copy_book' %}" class="form-horizontal" id="copy-book-form" enctype="multipart/form-data">
                    {% csrf_token %}
                    <fieldset>
                        <legend>{% trans 'Copy book from tangthuvien.vn to this site' %}</legend>
                        {% include 'general/form_render.phtml' %}
                        <div class="form-group">
                            <div class="col-lg-9 col-lg-offset-3">
                                <button type="submit" id="id_submit" class="btn btn-primary">{% trans 'Copy' %}</button>
                            </div>
                          </div>
                    </fieldset>
                </form>
                {% include 'book/_inline_add_author.phtml' with form_id='copy-book-form'%}
            </div>
        </div>
    </div>
</div>
{% endblock %}
