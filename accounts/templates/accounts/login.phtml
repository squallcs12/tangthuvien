{% extends "master.phtml" %}
{% load i18n %}
{% load back_url_tag %}
{% block content %}
<div class="login_page">
	<div class="row">
		<div class="col-lg-6">
			<div class="well">
				{% if not user.is_authenticated %}
					<form method="post" action="{% url 'django.contrib.auth.views.login' %}" id="login_form" class="form-horizontal">
						{% csrf_token %}
						<fieldset>
							<legend>{% trans 'Đăng nhập bằng tài khoản Tàng Thư Viện' %}</legend>
							{% if form.errors %}
								<div class="alert alert-danger">
									{% trans "Bạn điền sai tên đăng nhập hoặc mật khẩu. Xin thử lại lần nữa." %}
					            </div>
				            {% endif %}
							<div class="form-group">
			                    <label for="{{ form.username.auto_id }}" class="col-lg-2 control-label">{{ form.username.label }}</label>
			                    <div class="col-lg-10">
			                    	{{ form.username }}
			                    </div>
			            	</div>
							<div class="form-group">
			                    <label for="{{ form.password.auto_id }}" class="col-lg-2 control-label">{{ form.password.label }}</label>
			                    <div class="col-lg-10">
			                    	{{ form.password }}
			                    </div>
			            	</div>
			            	<div class="form-group">
		                    	<div class="col-lg-10 col-lg-offset-2">
		                      		<button type="submit" id="id_login" class="btn btn-primary">{% trans 'Đăng nhập' %}</button> 
		                    	</div>
		                  	</div>
						</fieldset>
						<input type="hidden" name="next" value="{{ next }}" />
					</form>
				{% else %}
					<p>{% trans 'You are currently logged in as' %} {{request.user.first_name}} {{request.user.last_name}}</p>
				{% endif %}
			</div>
		</div>
		<div class="col-lg-6">
			<div class="well">
				{% if not user.is_authenticated %}
				<p>{% trans 'Or log in with your social network account:' %}</p>
				{% else %}
				<p>{% trans 'Associate your account with social network account:' %}</p>
				{% endif %}
				<div id="social_login">
				    <a href="{% url 'socialauth_begin' 'facebook' %}{% back_url %}" id="facebook" title="{% trans 'Login with your Facebook account' %}">{% trans 'Login with Facebook' %}</a>
				    <a href="{% url 'socialauth_begin' 'twitter' %}{% back_url %}" id="twitter" title="{% trans 'Login with your Twitter account' %}">{% trans 'Login with Twitter' %}</a>
				    <a href="{% url 'socialauth_begin' 'google-oauth2' %}{% back_url %}" id="google" title="{% trans 'Login with your Google account' %}">{% trans 'Login with Google' %}</a>
				</div>
			</div>
		</div>
	</div>
</div>


{% endblock %}